# Name: 8_password
# Description: check the first argument as password as format 8 items with letters and digist
if [ $# -ne 1 ]; then
	echo "expext one argument"
fi
if [[ "$1" =~ ^(.*[a-zA-Z].*[0-9].*|[0-9].*[a-zA-Z].*)$ && ${#1} -ge 8 ]]; then
	echo "ok"
fi


