string=input("gebe Text ein:\n")
print("UPPER:\t\t" + string.upper())
print("LOWER:\t\t" + string.lower())
newstring=""
for c in string:
    if c.islower():
        newstring += c.upper()
    else:
        newstring += c.lower()
print("OPPOSITE:\t" + newstring)
