string=input("gebe einen Text ein:\n")
vergleich= ["A","a","E","e","I","i","O","o","U","u"]
count=0

for c in string:
    for v in vergleich:
        if c == v:
            count+= 1

print("Anzahl der Vokale ist: " + str(count))
